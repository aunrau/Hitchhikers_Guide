<p id="notice"><%= notice %></p>

<ul class="nav justify-content-end">
  <li class="nav-item">
<%= link_to 'Characters', guides_path %> |
<%= link_to 'Planets', planets_path %> |
<%= link_to 'Home', root_path %>
</li>
</ul>

<div class="page-header">
  <h1>All Characters</h1>
</div>

<div class="container">
<table class="table-striped">
  <thead>
    <tr>
      <th>Character</th>
      <th>Specie</th>
      <th>Quote</th>
      <th>Planet</th>
    </tr>
  </thead>

  <tbody>
    <% @guides.each do |guide| %>
      <tr>
        <td><%= guide.character %></td>
        <td><%= guide.specie %></td>
        <td><%= guide.quote %></td>
        <td><%= guide.planet.planet %></td>
        <td><%= link_to 'Show', guide, class: 'label label-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
